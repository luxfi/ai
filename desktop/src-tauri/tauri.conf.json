{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Lux AI",
  "version": "0.1.0",
  "identifier": "com.luxfi.ai",
  "build": {
    "beforeBuildCommand": "pnpm build",
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Lux AI",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [],
    "category": "Utility",
    "shortDescription": "Mine AI tokens and chat with AI models",
    "longDescription": "Lux AI Desktop allows you to mine AI tokens by contributing GPU compute and chat with AI models running on the Lux network."
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
